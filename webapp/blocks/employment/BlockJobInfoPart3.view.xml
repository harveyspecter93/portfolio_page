		xmlns="sap.m">


	<layout:HorizontalLayout class="sapUiSmallMarginTop">
		<layout:VerticalLayout>
			<Label text="{i18n>employment.jobinfo.manager.title}"/>
			<layout:HorizontalLayout>
					<layout:content>
						<layout:VerticalLayout>
							<Text text="{i18n>employment.jobinfo.manager.name}"/>
